<Window x:Class="BreakingGym.InterfazUsuarioUI.Asistencia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakingGym.InterfazUsuarioUI"
        mc:Ignorable="d"
        Title="Asistencia" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF28628C" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="BtnGuardar" Content="" HorizontalAlignment="Left" Height="42" Margin="479,329,0,0" VerticalAlignment="Top" Width="63" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/mas.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnModificar" Content="" HorizontalAlignment="Left" Height="42" Margin="597,329,0,0" VerticalAlignment="Top" Width="63" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/editar-texto.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnEliminar" Content="" HorizontalAlignment="Left" Height="42" Margin="702,329,0,0" VerticalAlignment="Top" Width="63" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/eliminar (2).png"/>
            </Button.Background>
        </Button>


        <DataGrid HorizontalAlignment="Left" Height="228" Margin="49,168,0,0" VerticalAlignment="Top" Width="320" d:ItemsSource="{d:SampleData ItemCount=5}"/>

        <TextBox x:Name="Cliente" HorizontalAlignment="Left" Height="29" Margin="494,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240"/>
        <TextBox x:Name="txtBuscar" HorizontalAlignment="Left" Height="15" Margin="75,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230"/>
        <DatePicker x:Name="DtFecha" HorizontalAlignment="Left" Height="29" Margin="502,188,0,0" VerticalAlignment="Top" Width="224"/>

        <Button x:Name="btnRefrescar" Content="" HorizontalAlignment="Left" Height="26" Margin="31,73,0,0" VerticalAlignment="Top" Width="39" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/actualizar.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnBuscar" Content="" HorizontalAlignment="Left" Height="29" Margin="331,73,0,0" VerticalAlignment="Top" Width="38">
            <Button.Background>
                <ImageBrush ImageSource="/buscar.png"/>
            </Button.Background>
        </Button>
        <Label Content="Registro de Asistencia" HorizontalAlignment="Left" Height="58" Margin="241,0,0,0" VerticalAlignment="Top" Width="352" Background="{x:Null}" Foreground="White" FontSize="30"/>

    </Grid>
</Window>
