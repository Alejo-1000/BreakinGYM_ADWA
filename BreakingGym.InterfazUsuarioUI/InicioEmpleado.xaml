            <GridSplitter Width="5" Background="#FF99ADBB"/>
            <Button Content="Asistencia" Width="115" Background="#00000000" BorderBrush="Transparent"/>
            <GridSplitter Width="5" Background="#FF99ADBB"/>
            <Button Content="Membresías" Width="108" Background="#FF28628C" BorderBrush="Transparent"/>
            <GridSplitter Width="5" Background="#FF99ADBB"/>
            <Button Content="Clientes" Width="98" Background="#00000000" BorderBrush="Transparent"/>
            <GridSplitter Width="5" Background="#FF99ADBB"/>
            <Button Content="Servicios" Width="101" Background="#00000000" BorderBrush="Transparent"/>
            <GridSplitter Background="#FF99ADBB" DockPanel.Dock="Right" Width="5"/>
            <GridSplitter Background="#FF99ADBB" Width="5"/>
        </DockPanel>
        <Label Content="¡Bienvenido a Inicio!" HorizontalAlignment="Center" Height="63" VerticalAlignment="Top" Width="402" FontFamily="Times New Roman" FontSize="45" Margin="0,154,0,0"/>
    </Grid>
</mah:MetroWindow>
