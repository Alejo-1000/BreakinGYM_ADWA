<mah:MetroWindow x:Class="BreakingGym.InterfazUsuarioUI.InicioEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BreakingGym.InterfazUsuarioUI"
        mc:Ignorable="d"
        Title="Inicio Empleado" Height="450" Width="800">
    <Grid Background="#00000000">
        <DockPanel Height="27" LastChildFill="False" VerticalAlignment="Top" Background="#FF28628C">
